{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2016",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "dist/**",
    "example/**",
    "**/dist",
    "**/node_modules"
  ]
}
